<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="janyelson.starwarslist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Start"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="@string/app_name"
            android:theme="@style/NewAppTheme" />
        <activity
            android:name=".activities.Description"
            android:label="Description"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.DescriptionFilm" />
        <activity android:name=".activities.DescriptionPlanet" />
        <activity android:name=".activities.DescriptionSpecie" />
        <activity android:name=".activities.DescriptionStarship" />
        <activity android:name=".activities.DescriptionVehicle"></activity>
    </application>

</manifest>