<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="janyelson.starwarslist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.Start"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="@string/app_name"
            android:theme="@style/NewAppTheme" />
        <activity
            android:name=".activities.Description"
            android:label="People Description"
            android:theme="@style/NewAppTheme"
            android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.DescriptionFilm"
            android:label="Film Description"
            android:theme="@style/NewAppTheme"
            android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.DescriptionPlanet"
            android:label="Planet Description"
            android:theme="@style/NewAppTheme"
            android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.DescriptionSpecie"
            android:label="Specie Description"
            android:theme="@style/NewAppTheme"
            android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.DescriptionStarship"
            android:label="Starship Description"
            android:theme="@style/NewAppTheme"
            android:parentActivityName=".activities.Home"/>
        <activity android:name=".activities.DescriptionVehicle"
            android:label="Vehicle Description"
            android:theme="@style/NewAppTheme"
            android:parentActivityName=".activities.Home"/>
    </application>

</manifest>