<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="janyelson.starwarslist.activities.DescriptionVehicle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/newborder"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    app:srcCompat="@drawable/unknown" />

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_title"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Model:" />

                    <TextView
                        android:id="@+id/textView_model_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_model"
                        android:layout_alignBottom="@+id/textView_model"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_model"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_manufacturer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Manufacturer:" />

                    <TextView
                        android:id="@+id/textView_manufacturer_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_manufacturer"
                        android:layout_alignBottom="@+id/textView_manufacturer"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_manufacturer"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_cost_in_credits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Cost in credits:" />

                    <TextView
                        android:id="@+id/textView_cost_in_credits_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_cost_in_credits"
                        android:layout_alignBottom="@+id/textView_cost_in_credits"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_cost_in_credits"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Length:" />

                    <TextView
                        android:id="@+id/textView_length_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_length"
                        android:layout_alignBottom="@+id/textView_length"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_length"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_max_atmosphering_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Max atmosphering speed:" />

                    <TextView
                        android:id="@+id/textView_max_atmosphering_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_max_atmosphering_speed"
                        android:layout_alignBottom="@+id/textView_max_atmosphering_speed"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_max_atmosphering_speed"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_crew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Crew:" />

                    <TextView
                        android:id="@+id/textView_crew_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_crew"
                        android:layout_alignBottom="@+id/textView_crew"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_crew"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_passengers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Passengers:" />

                    <TextView
                        android:id="@+id/textView_passengers_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_passengers"
                        android:layout_alignBottom="@+id/textView_passengers"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_passengers"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_cargo_capacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Cargo capacity:" />

                    <TextView
                        android:id="@+id/textView_cargo_capacity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_cargo_capacity"
                        android:layout_alignBottom="@+id/textView_cargo_capacity"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_cargo_capacity"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_consumables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Consumables:" />

                    <TextView
                        android:id="@+id/textView_consumables_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_consumables"
                        android:layout_alignBottom="@+id/textView_consumables"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_consumables"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_vehicle_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:text="Vehicle class:" />

                    <TextView
                        android:id="@+id/textView_vehicle_class_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_vehicle_class"
                        android:layout_alignBottom="@+id/textView_vehicle_class"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_toRightOf="@+id/textView_vehicle_class"
                        android:text="N/A" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_pilots"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_sub"
                android:layout_gravity="center"
                android:background="#00000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_pilots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:text="Pilots:" />

                <janyelson.starwarslist.utils.CustomListView
                    android:id="@+id/list_pilots"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/text_border"
                    android:fastScrollAlwaysVisible="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_films"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_pilots"
                android:layout_gravity="center"
                android:background="#00000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_films"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:text="Films:" />

                <janyelson.starwarslist.utils.CustomListView
                    android:id="@+id/list_films"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/text_border"
                    android:fastScrollAlwaysVisible="false" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>



