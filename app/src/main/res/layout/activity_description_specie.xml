<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="janyelson.starwarslist.activities.DescriptionSpecie">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/newborder"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    app:srcCompat="@drawable/unknown" />

                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="N/A"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_title"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_classification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="Classification:" />

                    <TextView
                        android:id="@+id/textView_classification_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_classification"
                        android:layout_alignBottom="@+id/textView_classification"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_classification"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="Designation:" />

                    <TextView
                        android:id="@+id/textView_designation_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_designation"
                        android:layout_alignBottom="@+id/textView_designation"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_designation"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_average_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="Average height:" />

                    <TextView
                        android:id="@+id/textView_average_height_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_average_height"
                        android:layout_alignBottom="@+id/textView_average_height"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_average_height"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_skin_colors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:paddingLeft="10dp"
                        android:text="Skin colors:" />

                    <TextView
                        android:id="@+id/textView_skin_colors_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_skin_colors"
                        android:layout_alignBottom="@+id/textView_skin_colors"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_skin_colors"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_hair_colors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:paddingLeft="10dp"
                        android:text="Hair colors:" />

                    <TextView
                        android:id="@+id/textView_hair_colors_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_hair_colors"
                        android:layout_alignBottom="@+id/textView_hair_colors"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_hair_colors"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_eye_colors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="Eye colors:" />

                    <TextView
                        android:id="@+id/textView_eye_colors_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_eye_colors"
                        android:layout_alignBottom="@+id/textView_eye_colors"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_eye_colors"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_average_lifespan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="Average lifespan:" />

                    <TextView
                        android:id="@+id/textView_average_lifespan_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_average_lifespan"
                        android:layout_alignBottom="@+id/textView_average_lifespan"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_average_lifespan"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_homeworld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:paddingLeft="10dp"
                        android:text="Homeworld:" />

                    <TextView
                        android:id="@+id/textView_homeworld_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_homeworld"
                        android:layout_alignBottom="@+id/textView_homeworld"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_homeworld"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="Language:" />

                    <TextView
                        android:id="@+id/textView_language_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView_language"
                        android:layout_alignBottom="@+id/textView_language"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/textView_language"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="N/A" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_people"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_sub"
                android:layout_gravity="center"
                android:background="#00000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:text="People:" />

                <janyelson.starwarslist.utils.CustomListView
                    android:id="@+id/list_people"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@drawable/text_border"
                    android:fastScrollAlwaysVisible="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_films"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_people"
                android:layout_gravity="center"
                android:background="#00000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_films"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:text="Films:" />

                <janyelson.starwarslist.utils.CustomListView
                    android:id="@+id/list_films"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/text_border"
                    android:fastScrollAlwaysVisible="false" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
